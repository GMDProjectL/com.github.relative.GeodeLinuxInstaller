<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>org.geode.Installer</id>
    <name>Geode Linux Installer</name>
    <summary>Bringing mod support to Geometry Dash.</summary>
    <url type="homepage">https://geode-sdk.org</url>
    <developer id="com.github.relative">
        <name>Relative</name>
    </developer>
    <metadata_license>MIT</metadata_license>
    <project_license>MIT</project_license>
    <description>
        <p>
            Geode is a fan-made extension for Geometry Dash that adds mod support to the game. Browse from an in-game list to seamlessly download mods on Linux!
            **Heads up:** this installer requires broad filesystem access to detect Steam installations
            and game libraries that may be located on external drives or custom mount points.
        </p>
    </description>

    <launchable type="desktop-id">org.geode.Installer.desktop</launchable>

    <releases>
        <release version="1.0.0" date="2025-07-01">
            <description>
                <p>Initial release of Geode Linux Installer</p>
            </description>
        </release>
    </releases>

